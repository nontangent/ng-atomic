{
  "$schema": "http://json-schema.org/schema",
  "$id": "ng-atomic-schematics-gpt3",
  "title": "Angular Atomic Schematics GPT3",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path at which to create the component file, relative to the current workspace. Default is a folder with the same name as the component in the project root.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "instructions": {
      "type": "string",
      "description": "The instruction of the.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What do you instruct GPT-3?"
    },
    "inputs": {
      "type": "string",
      "description": "The path of input files or directory for estimating file content. ex) --inputs \"pages/users,pages/groups\""
    },
    "outputs": {
      "type": "string",
      "description": "The path of input files or directory for estimating file content. ex) --inputs \"pages/users,pages/groups\""
    },
    "parallel": {
      "type": "boolean",
      "description": "Request Open AI API parallel mode.",
      "default": true
    },
    "overwrite": {
      "type": "boolean",
      "description": "Enable overwrite files.",
      "default": false
    },
    "inputScope": {
      "type": "string",
      "description": "",
      "default": "./"
    },
    "outputScope": {
      "type": "string",
      "description": "",
      "default": "./"
    }
  },
  "required": ["instructions"]
}
