{
  "root": "libs/schematics",
  "sourceRoot": "libs/schematics/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/schematics/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/schematics"],
      "options": {
        "jestConfig": "libs/schematics/jest.config.js",
        "passWithNoTests": true
      }
    },
    "build-package": {
      "executor": "@nrwl/node:package",
      "options": {
        "outputPath": "dist/libs/schematics",
        "tsConfig": "libs/schematics/tsconfig.lib.json",
        "packageJson": "libs/schematics/package.json",
        "main": "libs/schematics/src/index.ts",
        "sourceMap": false,
        "assets": [
          "collection.json",
          {
            "input": "./libs/schematics/src",
            "glob": "**/*.!(ts)",
            "output": "./src"
          },
          {
            "input": "./libs/schematics",
            "glob": "collection.json",
            "output": "."
          }
        ],
        "srcRootForCompilationRoot": "libs/schematics"
      },
      "outputs": ["{options.outputPath}"]
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "nx build-package schematics",
          "yarn tsc -p libs/schematics/tsconfig.lib.json",
          "cpy libs/schematics/collection.json dist/libs/schematics",
          "cpy libs/schematics/src/**/files/**/*.* dist/ --parents",
          "cpy libs/schematics/src/**/schema.json dist/ --parents"
        ],
        "outputPath": ["dist/libs/schematics"]
      }
    }
  },
  "tags": []
}
